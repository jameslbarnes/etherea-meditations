---
import MainLayout from '../layouts/MainLayout.astro';
import { sessionData } from '../data/sessions';
---

<MainLayout title="Tea Party Memento" activeSession="" showSidebar={false}>
  <div class="min-h-screen bg-[#faf9f7] dark:bg-[#1a1a1a] relative overflow-hidden transition-colors duration-700">
    <div class="max-w-5xl mx-auto px-6 py-20 relative z-10">
      <!-- Header -->
      <div class="max-w-2xl mx-auto text-center mb-20">
        <h1>
          <span class="block text-sm uppercase tracking-[0.2em] text-[#94908d] dark:text-[#666] mb-4">
            A Mindful Journey
          </span>
          <span class="block text-4xl md:text-5xl text-[#2d2d2d] dark:text-[#f0f0f0] font-light tracking-tight leading-tight">
            Sipping Into the New Year
          </span>
        </h1>
        
        <div class="mt-12 text-[#666] dark:text-[#999]">
          <p class="text-lg font-light leading-relaxed">
            To our amazing community, thank you for showing up with courage, grace, and creativity to this experience. As a thank you, we've created a collection of personalized meditations to help each of you bring forth your intentions for 2025.
          </p>
          <p class="mt-8 font-light italic">
            With gratitude,<br/>
            <span class="signature text-xl mt-2 block">Hannah, Laura, and James</span>
          </p>
        </div>
      </div>

      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {Object.entries(sessionData).map(([key, session]) => (
          <a href={`/${key}`} class="group">
            <div class="relative overflow-hidden rounded-lg">
              <img 
                src={session.image} 
                alt={`Meditation for ${session.name}`}
                class="w-full aspect-[4/3] object-cover transform transition duration-500 group-hover:scale-105"
              />
              
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent">
                <div class="absolute bottom-0 left-0 right-0 p-5">
                  <h2 class="text-white text-xl font-medium mb-2">{session.tagline}</h2>
                  <p class="text-white/90 text-sm font-light leading-relaxed">
					{session.name}  
                  </p>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</MainLayout> 

<style>
  .signature {
    font-family: 'Playfair Display', serif;
    @apply text-[#2d2d2d] dark:text-[#f0f0f0];
  }
</style> 